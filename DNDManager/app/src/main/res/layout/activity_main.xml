
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:context=".MainActivity"
        android:id="@+id/container">


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Scheduler Task"
            android:id="@+id/button2"
            android:onClick="schedulers"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Show Log"
            android:id="@+id/button3"
            android:onClick="showLog"
            android:layout_row="0"
            android:layout_column="2" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="1"
            android:layout_column="0" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Contacts to be Blocked"
            android:id="@+id/textView"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:onClick="addContact"
            android:background="@color/abc_search_url_text_normal"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Remove or edit blocked contacts"
            android:id="@+id/textView2"
            android:layout_weight="0.26"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="3"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/removeOrEditContact"
            android:onClick="removeOrEditContact"
            android:background="@color/abc_search_url_text_normal"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"/>

    </GridLayout>

